--- 
interface Props {
	title: string;
}

const { title } = Astro.props;

import Background from '../components/common/Background.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';

---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="l-wrapper">
			<div class="l-bg"><Background /></div>
			<div class="l-header"><Header /></div>
			<div class="l-contents"><slot /></div>
			<div class="l-footer"><Footer /></div>
		</div>
	</body>
</html>

<script src="../assets/scripts/index.ts"></script>

<style is:global lang="scss">
  @use '../assets/styles/media-query.scss' as *;
	/*** The new CSS Reset - version 1.0.0 (last updated 8.7.2021) ***/

	*:where(:not(iframe, canvas, img, svg, video):not(svg *)){
		all: unset;
		display: revert;
	}

	*,
	*::before,
	*::after{
		box-sizing: border-box;
	}

	ol, ul {
		list-style: none;
	}

	img {
		max-width: 100%;
	}

	table{
		border-collapse: collapse;
	}

	a,
	button {
		cursor: pointer;
	}

	.l-wrapper {
		color: #fff;
		background-color: #000;
	}
	.l-bg {
		position: fixed;
		inset: 0;
		z-index: 0;
		width: 100%;
		height: 100vh;
		@include sp {
			opacity: .65;
		}
	}
	.l-header {
		position: fixed;
		top: 0;
		left: 0;
		z-index: 2;
		width: 100%;
    background-color: transparent;
	}
	.l-contents {
		position: relative;
		z-index: 1;
	}
	.l-footer {
		position: relative;
	}
</style>
